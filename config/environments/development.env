# Development Environment Configuration
# This file contains development-specific overrides

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Relaxed performance requirements for development
MAX_INFERENCE_LATENCY_MS=50
MIN_ACCURACY=0.70
TARGET_ACCURACY=0.75

# Enable development features
ENABLE_DEBUG_MODE=true
ENABLE_PROFILING=true
ENABLE_MOCK_DATA=true
ENABLE_HOT_RELOAD=true

# Disable scheduler for manual testing
ENABLE_SCHEDULER=false

# Reduced data retention for faster testing
DATA_RETENTION_DAYS=30
NEWS_RELEVANCE_DAYS=7

# Enable all monitoring for debugging
ENABLE_PERFORMANCE_MONITORING=true
LOG_PERFORMANCE_METRICS=true
ENABLE_JSON_LOGGING=true

# Testing configuration
RUN_TESTS_ON_STARTUP=false
ENABLE_INTEGRATION_TESTS=true

# Development server
DEVELOPMENT_PORT=8000