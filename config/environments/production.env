# Production Environment Configuration
# This file contains production-specific overrides

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Strict performance requirements for production
MAX_INFERENCE_LATENCY_MS=10
MIN_ACCURACY=0.75
TARGET_ACCURACY=0.80

# Disable all development features
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_MOCK_DATA=false
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_TOOLBAR=false

# Enable scheduler for production
ENABLE_SCHEDULER=true

# Full data retention
DATA_RETENTION_DAYS=365
NEWS_RELEVANCE_DAYS=30

# Enable comprehensive monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_PERFORMANCE_METRICS=true
ENABLE_JSON_LOGGING=false

# Production alerts
ALERT_EMAIL=production-alerts@example.com
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=true

# Disable testing in production
RUN_TESTS_ON_STARTUP=false
ENABLE_INTEGRATION_TESTS=false

# Optimized cache settings
CACHE_SIZE_MB=500
ENABLE_CACHING=true

# Security settings
ENABLE_ACCESS_LOGGING=true
ENCRYPT_SENSITIVE_DATA=false
ENABLE_DATA_ANONYMIZATION=false

# Performance optimization
CPU_THREADS=1
MEMORY_LIMIT_GB=4

# Log rotation for production
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10
LOG_ROTATION_INTERVAL=daily