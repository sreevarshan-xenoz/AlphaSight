# Staging Environment Configuration
# This file contains staging-specific overrides

ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Slightly relaxed performance requirements for staging
MAX_INFERENCE_LATENCY_MS=15
MIN_ACCURACY=0.75
TARGET_ACCURACY=0.80

# Disable development features
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_MOCK_DATA=false
ENABLE_HOT_RELOAD=false

# Enable scheduler for testing
ENABLE_SCHEDULER=true

# Standard data retention
DATA_RETENTION_DAYS=365
NEWS_RELEVANCE_DAYS=30

# Enable monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_PERFORMANCE_METRICS=true
ENABLE_JSON_LOGGING=false

# Staging-specific alerts
ALERT_EMAIL=staging-alerts@example.com
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false

# Testing configuration
RUN_TESTS_ON_STARTUP=false
ENABLE_INTEGRATION_TESTS=true

# Reduced cache for staging
CACHE_SIZE_MB=250