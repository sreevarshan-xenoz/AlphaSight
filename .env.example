# Environment Configuration for NIFTY 50 ML Pipeline
# Copy this file to .env and fill in your actual values

# API Keys (if required by data sources)
NSE_API_KEY=your_nse_api_key_here
ECONOMIC_TIMES_API_KEY=your_economic_times_api_key_here

# Logging Configuration
LOG_LEVEL=INFO

# Data Configuration
DATA_RETENTION_DAYS=365
NEWS_RELEVANCE_DAYS=30

# Model Configuration
XGBOOST_N_JOBS=1
XGBOOST_MAX_DEPTH=6

# Performance Thresholds
MIN_ACCURACY=0.75
TARGET_ACCURACY=0.80
MAX_INFERENCE_LATENCY_MS=10.0

# Scheduling
EXECUTION_TIME=17:30
TIMEZONE=Asia/Kolkata